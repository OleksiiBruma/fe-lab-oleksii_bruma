<main class="page page--no-sticky">
<div class="page__item container">
  <h2 class="page__caption">Settings</h2>
  <ul class="page__toggle  tab">
    <li class="tab__item"><a class="tab__link
       tab__link--active" href="#">Pomodoros</a></li>
    <li class="tab__item">
      <a class="tab__link" href="#">Categories</a>
    </li>
  </ul>
</div>
<section class="settings-pomodoro container ">
  <h3 class="settings-pomodoro__subcaption subcaption">Pomodoros settings</h3>
  <ul class="settings-pomodoro__list">
    <li class="settings-pomodoro__item input">
      <label class="input__label input__label--work-time" for="work-time">WORK
        TIME</label>
      <div class="input__number number">
        <button class="number__step number__step--down"><span class="sr-only">Remove one</span></button>
        <input id="work-time" class="number__input" type="number" min="15" max="25" value="25" disabled>
        <button class="number__step number__step--up number__step--disabled " disabled><span class="sr-only">Add</span></button>
      </div>
      <p class="input__description">Please select a value between 15 and 25
        <em class="input__highlighted">minutes</em></p>
    </li>
    <li class="settings-pomodoro__item input">
      <label class="input__label input__label--work-iteration"
             for="work-iteration">WORK ITERATION</label>
      <div class="input__number number">
        <button class="number__step number__step--down"><span class="sr-only">Remove one</span></button>
        <input id="work-iteration" class="number__input" type="number" min="2"
               max="5" value="5" disabled>
        <button class="number__step number__step--up"><span class="sr-only">Add</span></button>
      </div>
      <p class="input__description">Please select a value between 2 and 5 <em
        class="input__highlighted">iterations</em></p>
    </li>
    <li class="settings-pomodoro__item input">
      <label class="input__label input__label--short-break" for="short-break">SHORT
        BREAK</label>
      <div class="input__number number">
        <button class="number__step number__step--down"><span class="sr-only">Remove one</span></button>
        <input id="short-break" class="number__input" type="number" min="3"
               max="5"  value="5" disabled>
        <button class="number__step number__step--up"><span class="sr-only">Add</span></button>
      </div>
      <p class="input__description">Please select a value between 3 and 5 <em
        class="input__highlighted">minutes</em></p>
    </li>
    <li class="settings-pomodoro__item input">
      <label class="input__label input__label--long-break" for="long-break">LONG
        BREAK</label>
      <div class="input__number number">
        <button class="number__step number__step--down"><span class="sr-only">Remove one</span></button>
        <input id="long-break" class="number__input" type="number" min="15"
               max="30"  value="30"  disabled>
        <button class="number__step number__step--up "><span class="sr-only">Add</span></button>
      </div>
      <p class="input__description">Please select a value between 15 and 30 <em
        class="input__highlighted">minutes</em></p>
    </li>
  </ul>
  <h3 class="settings-pomodoro__caption">Your cycle</h3>
  <div class="settings-pomodoro__progress-bar"><span class="sr-only">Graph</span></div>
  <div class="settings-pomodoro__buttons buttons">
    <button class="buttons__item buttons__item--info" type="button">Go to
      Tasks
    </button>
    <button class="buttons__item buttons__item--success" type="button">Save
    </button>
  </div>
</section>
<section class="settings-category container hidden">
  <h3 class="settings-category__subcaption subcaption">Categories list overview</h3>
  <ul class="settings-category__list">
    <li class="settings-category__item settings-category__item--work">Work</li>
    <li class="settings-category__item settings-category__item--education">Education</li>
    <li class="settings-category__item settings-category__item--hobby">Hobby</li>
    <li class="settings-category__item settings-category__item--sport">Sport</li>
    <li class="settings-category__item settings-category__item--other">Other</li>
  </ul>
  <div class="settings-category__buttons buttons">
    <button class="buttons__item buttons__item--info" type="button">Go to
      Tasks
    </button>
  </div>
</section>
</main>
<script src="/bundle.js"></script>
