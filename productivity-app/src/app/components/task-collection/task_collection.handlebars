<main class="page page--no-sticky">
  <div class="page__item container">
    <h2 class="page__caption">Daily Task List
      <button
        class="page__add-button" ><span class="sr-only">Add task button</span></button>
    </h2>
    <div class="page__stub stub stub--add-your-first-task hidden ">
      <img class="stub__img" src="../images/tomato-add.svg" alt="tomato settings">
      <p class="stub__message">
        Add your first task
      </p>
    </div>
    <section class="page__stub stub stub--first-visit hidden ">
      <img class="stub__img" src="../images/tomato_settings.svg" alt="tomato settings">
      <p class="stub__message">
        As you visited our site for a first time you can check <br>
        and customize your default application settings
      </p>
      <div class="stub__choose buttons">
        <button class="buttons__item buttons__item--info" data-id="tasklistfirsttime" >Skip</button>
        <button class="buttons__item buttons__item--success" data-id="settings" >Go to Settings</button>
      </div>
    </section>
    <section class="daily">
      <div class="daily__nav ">
        <ul class="daily__remove tab tab--remove ">
          <li class="tab__item "><a class="tab__link select" href="#" data-id="daily">Select All </a></li>
          <li class="tab__item">
            <a class="tab__link deselect" href="#" data-id="daily">Deselect All</a>
          </li>
        </ul>
        <ul class="daily__tab tab">
          <li class="tab__item"><a class="tab__link
       tab__link--active" href="#" data-todoView="1">To Do</a></li>
          <li class="tab__item">
            <a class="tab__link" href="#" data-todoView="2">Done</a>
          </li>
        </ul>
      </div>
      <p class="daily__message daily__message--excellent hidden">Excellent,<br> all daily tasks done! :) </p>
      <p class="daily__message daily__message--drag daily__message--task-added hidden">Task added,<br> drag it to the top 5 in daily list </p>
      <ul class="daily__tasks-list tasks">


      </ul>
    </section>
    <section class="page__stub stub hidden page__stub--dont-have-any-tasks">
      <img class="stub__img" src="../images/tomato-addv02.svg" alt="tomato settings">
      <p class="stub__message">
        You donâ€™t have any tasks left.<br>
        Add new tasks to stay productive.
      </p>
    </section>
    <section class="global">
      <header class="global__header">
        <h2 class="global__caption">
          <button class="global__button open-button" data-id="globalbutton">Global list <span class="open-button__icon open-button__icon--active" data-id="globalbutton"></span></button>
        </h2>
        <ul class="global__filter global__filter--active tab">
          <li class="tab__item"><a class="tab__link
       tab__link--active" href="#" data-filterState="0">All</a></li>
          <li class="tab__item">
            <a class="tab__link" href="#" data-filterState="1">Urgent</a>
          </li>
          <li class="tab__item">
            <a class="tab__link" href="#" data-filterState="2">High</a>
          </li>
          <li class="tab__item">
            <a class="tab__link" href="#" data-filterState="3">Middle</a>
          </li>
          <li class="tab__item">
            <a class="tab__link" href="#" data-filterState="4">Low</a>
          </li>
        </ul>
      </header>
      <div class="global__tasks global__tasks--active">
        <ul class="global__remove tab tab--remove">
          <li class="tab__item"><a class="tab__link" href="#">Select All</a></li>
          <li class="tab__item">
            <a class="tab__link" href="#">Deselect All</a>
          </li>
        </ul>
      </div>
    </section>
  </div>
</main>
</div>
